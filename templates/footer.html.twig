<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Section gauche: Horaires d'ouverture -->
            <div class="col-lg-6 col-md-6 text-center text-md-start mb-3 mb-md-0">
                <h3 class="h5">Horaires d'ouverture</h3>
                <ul class="list-unstyled">
                    {% for horaire in horaires %}
                        <li>
                            {{ horaire.jour }} : 
                            {% if horaire.heureOuverture is not null and horaire.heureFermeture is not null %}
                                {{ horaire.heureOuverture|date('H:i') }} - {{ horaire.heureFermeture|date('H:i') }}
                            {% else %}
                                Fermé
                            {% endif %}
                        </li>
                    {% else %}
                        <li>Aucun horaire disponible</li>
                    {% endfor %}
                </ul>
            </div>
            
            <!-- Barre horizontale pour mobiles -->
            <div class="col-12 d-lg-none mb-3">
                <hr style="border-top: 1px solid #fff; width: 100%;">
            </div>

            <!-- Barre verticale pour écrans larges -->
            <div class="col-lg-1 d-none d-lg-flex justify-content-center">
                <div style="width: 1px; height: 100px; background-color: #fff;"></div>
            </div>

            <!-- Section droite: Copyright, slogan et mentions légales -->
            <div class="col-lg-5 col-md-6 text-center text-md-end">
                <p class="mb-1">&copy; 2024 - Tous droits réservés.</p>
                <p class="mb-1">ParrotGarage – Votre voiture, notre passion.</p>
                <p><a href="{{ path('mentions_legales') }}" class="text-white">Mentions légales</a></p>
            </div>
        </div>
    </div>
</footer>